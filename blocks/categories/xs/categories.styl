+media-breakpoint-up(xs) {
    .categories {    
        display: flex;
        flex-direction: column;
       
    }
    
    .categories__section{
        width: 100%;
        height:170px;
        position relative;
        display: flex;
        align-items: center;
        justify-content: center;
        color:#fff;
        &:hover:after{
            background-color: #111111;
            content: '';
            position absolute
            width:100%;
            height:100%;
            opacity 0.5;
            transition: .2s;
            }
        }
    .category--text{
        z-index:1;
        display: flex;
        position relative;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        }
    .category__moonshine{
        background: url(../images/category-1.jpg);
        background-size: cover;
        background-position: center;
        }
    .category__wine{
        background: url(../images/category-3.jpg);
        background-size: cover;
        background-position: center;
    
        }

    .category__beer{
        background: url(../images/category-2.jpg);
        background-size: cover;
        background-position: center;
        }
    .category__cheese{
        background: url(../images/category-4.jpg)
        background-size: cover;
        background-position: center;
        }
    .btn{
        display none;

        }
    
    .amount-product--text{
        font-size: 18px
        font-weight: 600;
        margin:0}
    .product--text{
        font-size: 28px
        font-weight: 600;
        margin:0
        padding-top: 20px;}
}