+media-breakpoint-up(lg) {
    .footer__block-left-lg,.footer__block-right-lg{
        display: block}
    .footer-block-xs{
        display: none}
    .logo-main{
        font-size: 30px;
        font-weight: 700}
    .logo-factory{
         font-size: 24px;
        font-weight: 600;
        }
    
    .logo-factory,.logo-main{

        margin:0;}
   
    .footer-text--style{
         font-size: 15px;
         font-weight: 700
        margin-top: 40px;}
    .footer-text--style-fonts{
        font-size: 15px
        font-weight: 600}
    .footer {    
        
    align-items: stretch;
    &__first-b {
        display: flex;
        flex-direction: row;
        justify-content: space-around;
        width: 100%;
        flex-wrap: wrap
        padding-top:25px;
        margin:0 auto 65px auto;
    }
    .footer-menu__item,.footer-submenu-list__item{
        margin:0;}
    .footer__block-left-lg,.footer__block-right-lg,.footer__form   {
        display: flex;
        flex-direction: column;}
    .footer-menu{
        display: flex;
        flex-direction: row;
        
        margin:0;
        justify-content: space-between;}
    .footer__copyright{
        margin: 10px 0 0 0;}
    .footer__adress{
            margin-top: 40px;
}
    .footer-menu__sc{   
          display: flex;
        flex-direction: column;
        justify-content: space-between;}
    .sc-btn__block{
       }
    .sc-btn{
        flex-direction: row;
        width: 200px;
        }
    .footer__its{
        margin-bottom: 0;}
    .form__caption {
        margin:0;}
    .footer__form{
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        }
    .form__btn {padding: 10px 30px;
        border: solid #fff 1px;
        text-transform: uppercase;
        color: #fff;
        font-weight: 400;
        font-size: 15px;
        background-color: #111;
        cursor: pointer;
        &:hover{
            color: #111;
            background-color: #fff;
            transition: .1s;

        }}
    .footer__pay-systems{
        margin-top: 40px;}
    .footer-text-tel{
        font-size: 15px;
        font-weight: 600;}
    .email{
        background: #313131;
        border-radius: 4px;
        font-weight: 600;
        border: none;
        font-size: .93em;
        color: #000;
      
        width: 300px;
        height: 30px;
        padding: 5px 10px;
        margin: 2px 0 30px 0;}
    &__second-b {
        display:flex;
        width: 100%;
        flex-direction: row;
        justify-content: space-around;
    }
    }
     .footer__inner .footer__card{
        justify-content: flex-end;}
}