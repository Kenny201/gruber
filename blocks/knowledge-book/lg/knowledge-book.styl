+media-breakpoint-up(lg) {
    
    .knowledge-book{
        display: block;
         background-color: #F6F6F6;
        }
    .knowledge-book__content{
        height: auto;
        margin: 0 auto;
        padding: 0 0 30px 0;
        width: auto;
        max-width: 980px;
}
    .content__col{
       display: flex;
        width: 100%;
        justify-content: space-between;
        }
    .content__col-item{
        margin:0;
        max-width: 460px;}
    .content_02{
        display: block;}
    .book__all-articles-headline{
        display: block;}
    .book__all-articles{
        display: none;}
    .book__btn--margin_z{
        margin-top: 0;
        }
    .book__headline {
        display:flex;
        justify-content: space-between;
        align-items: center;
        font-size: 37px;
        font-weight: 400;
        padding-top:60px;
        text-align: center;}
    .book__image{
        display: block;
        width:100%;
        }
    .book__img{
        width:100%; }
    .book__subtitle{
        font-size: 18px
        font-weight:700;}
   
    .button-headline{
        display: block;}
    .button-content{
        display: none;}
    .book__description{
        margin-bottom: 0; }
    
}