+media-breakpoint-up(xs) {
    .nav{
        background-color: #F6F6F6;
        }
     .ico__search_lg {
        display: none;
       }
    .search-hide {
        width: 100%;
        display: flex;
        height:90px;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        align-self: center;
        .personal-nav {
            display: flex;
            align-items: center;
        }
    }
    .personal-nav_card {
            width: auto;
            padding: 0 15px;

            &:hover {
                background: #eee !important;
            }
            
            a {
                display: block;
                width: 30px;          
                color: #111111;
                font-weight: 400;
                display: inline-block;
                line-height: 70px !important;
                height: 70px !important;
                margin: 0 auto;
                background: url('../images/spritesheet.png')no-repeat -70px 30px;
            }
        }
    .nav-menu__block{
        height: 100%
        }
    .top-nav-button {
         
            color: #111111;
            font-weight: 400;
         
            line-height: 70px !important;
            display: inline-flex;
            height: 100%;
            align-items: center;
            text-decoration: none;
            padding: 0 15px;
           
            &:hover {
                background: #eee !important;
                color: #ccc;
            }
        }
}