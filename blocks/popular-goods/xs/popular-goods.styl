+media-breakpoint-up(xs) {
    .popular-goods {    
        background-color: #F6F6F6;
        padding: 36px 0;
    }
   
    .popular-goods__title{
        font-size: 25px;
        margin-bottom: 20px;
        padding: 0 20px;}
    .popular-goods__info{
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding:0 12px;}
    .popular-goods__item{
        display:flex;
        padding:12px;
        margin-bottom: 10px
        background-color: #fff;
        &:hover{
            .name{
                color: #6494cf;
            }}
        }
    .popular-goods__image {
        display: flex;
        max-height: 82px;
        flex: 0 0 120px;
        position relative;
            .label{
                position: absolute;
                border-radius: 2px;
                padding: 4px 10px;
                color: #fff;
                top: 5px;
                left: 5px;
                font-size: 12px;
            }
            .label_hit{
                background-color: #ffdb5e;
                top: 30px;
                text-transform: uppercase;
            }
            .second-label{
                    top: 55px;
                    background-color: #c25445;
                    text-transform: uppercase;}
            .label_sale{
                background-color: #69b68d;

            }
            
    }
        
    .image--style{
            width: 100%;
        }
    .info-el--margin {
        margin-bottom: 8px !important;}
    .name{
        font-size: 12px;
        color:#111;
       }
    .rating-box{
         display: inline-flex;
         align-items: center;
         height:19px;
         }
    .stars-box{
        display: flex;
        height:100%;
        margin-right:16px;
      
        }
    .sprite-star{
        width:12px;
        height: 12px;
        margin-right:8px;
        display: block;
        background: url(../images/spritesheet.png) no-repeat -248px -17px;}
    .reply__box{
        font-size:13px;
        height:100%;
        display: flex;
    }
    .comments-icon{
        width: 16px;
        height: 12px;
        img{
            width:100%;
        }
    
    }
    .reply__numb{
        display: block;
        margin-right:4px;}
    .price{
        font-family: 'PT Sans', sans-serif;
        font-size: 14px;
        font-weight:700;
        color:#111;}
}