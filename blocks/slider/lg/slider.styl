+media-breakpoint-up(lg) {
    .btn-inner--prev{
        position: absolute;
        top: 50%;
        left:3%;
       
        z-index:1;
       }
    .btn-inner--next{
        position: absolute;
        top: 50%;
        right:3%;}
    .btn-slider{
        display: flex;
        justify-content: center;
        align-items: center;
       
        width: 50px;
        height: 50px;
        border:1px solid #111111;
        &:hover{
            background-color: #111111;}}
    .btn-prev{
     
       
        position relative;
        &:after{
            position absolute;
            content: '';
            background: url("../images/spritesheet.png") no-repeat -170px -15px;
            width:11px;
            height:16px;
            
            }
        &:hover:after{
                background: url("../images/spritesheet.png")  no-repeat -185px -15px;
                width:11px;
                height:16px;
            }
    }
     .btn-next{
      
      
        position relative;
        &:after{
            position absolute;
            content: '';
            background: url("../images/spritesheet.png") no-repeat -170px -15px;
            width:11px;
            height:16px;
            transform: rotate(180deg)
            }
        &:hover:after{
                background: url("../images/spritesheet.png")  no-repeat -185px -15px;
                width:11px;
                height:16px;
                transform: rotate(180deg)
            }
    }
    .slider {    
        display: block;
        width:100%;
        height:100%;
    }
    .slider__item{
        border:  1px solid #111111;
        display: block;
        width: 100%;
        height: 300px;
        
     }
  
    .slide-1{
        background-image: url("../images/guber_70_2.jpg");
        background-position: center;
        background-size: cover;
        }
     .slide-2{
        background-image: url("../images/skidka-mednyi-shlem.jpg");
        background-position: center;
        background-size: cover;
         }
     .slide-3{
        background-image: url("../images/tinkoff-kredit.jpg");
        background-position: center;
        background-size: cover;
         }
     .slide-4{
        background-image: url("../images/banner-cheesemaker-desk.jpg");
        background-position: center;
        background-size: cover;
        
         }
     
}