+media-breakpoint-up(xs) {
    .where-buy {    
        background-color: #ccc;
        height: 620px;
    &__headline {
        padding: 50px  0 40px;
        margin:0 10px;
        text-align: center;
        font-size: 28px;
        font-weight: 400;
    }
    &__city-inner {
       
        display: flex;
        flex-direction: column;
        margin:0 10px;
        height:auto;
        align-items: center;
        justify-content: none;

    }   
    &__city {
        display: block;

        margin:0 0 10px 0; 
        text-align: center;
        text-transform: uppercase;
        font-size: 1em;
        padding: 10px 30px;
        
        background: rgba(255,255,255,.6);
        width: 220px;
        cursor: pointer;
         &:hover{
            background: #ffffff;
            }
        .city__link{
            font-size: 15px
            &:hover{
               color: #909090; }}
        
    }
    }
}