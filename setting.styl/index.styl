@import "flexbox-grid.styl"
@import "../node_modules/slick-carousel/slick/slick-theme.css"
@import "../node_modules/slick-carousel/slick/slick.css"
@import "../node_modules/fancybox/dist/css/jquery.fancybox.css"
@import url('https://fonts.googleapis.com/css?family=PT+Sans:400,700');
init($breakpoints, $columns)

html
    height: 100%

body
    margin: 0
    font: 400 1em/1.4 'Open Sans', sans-serif;
    height: 100%
    line-height:1.3
    background-color: #ffffff;
   
*
    box-sizing border-box

h1, h2, h3, h4, h5, h6
    margin-top 0
    margin-bottom 0

input:focus
    outline none
.grid--container {
    padding:0;
    max-width: 100%;}
.link  
    text-decoration: none;
.link-b
    color: #111111;
.link-w{
        color:#fff ;}
   
.col
        padding: 0;
.row
        margin: 0 !important;
.slick-dots li button:before 
    font-family: 'slick';
    font-size: 35px;
    line-height: 20px;
    position: absolute;
    top: 0;
    left: 0;
    width: 20px;
    height: 20px;
    content: '•'; /* <-- Вот этот символ */
    text-align: center;
    opacity: .25;
    border-radius: 35px;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  .button{
        padding: 10px 30px;
        border:1px solid #111111;
        display: block;
        font-weight:600;
        font-size:15px;
        text-align: center;
        text-transform: uppercase;
        margin-top: 30px
        &:hover{
            background-color: #111;
            color:#fff; 
            transition: .2s}}
.block-lg-center
     max-width: 1130px;
     margin:0 auto;
create-container($container-max-widths)


@import "../blocks/**/xs/*.styl"
@import "../blocks/**/sm/*.styl"
@import "../blocks/**/md/*.styl"
@import "../blocks/**/lg/*.styl"
@import "../blocks/**/xl/*.styl"


